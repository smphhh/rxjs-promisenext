{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "dist"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
   "exclude": [
     "node_modules",
     "dist"
   ]
}
